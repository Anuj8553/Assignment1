<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="345dp"
        android:layout_height="262dp"
        android:layout_marginTop="64dp"
        android:rotationX="0"
        android:layout_marginStart="32dp"
        android:src="@drawable/img_3"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="345dp"
        android:layout_height="301dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/white_backgroundfigma"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.809">

        <TextView
            android:id="@+id/slide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="About"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur euismod diam eu pharetra pharetra. Donec vitae cursus turpis. Pellentesque dictum a eros placerat porttitor. Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Donec porttitor urna nec metus rhoncus, quis convallis nulla vehicula. Fusce dignissim justo risus, vitae mollis sem blandit at. Sed sagittis porttitor odio quis lacinia."
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>